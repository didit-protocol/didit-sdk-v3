{
  "name": "@didit-sdk/react",
  "version": "0.0.2-test.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "watch": "npm run build -- --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test": "vitest run --dir tests",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@didit-sdk/core": "workspace:*"
  },
  "devDependencies": {
    "@didit-sdk/eslint-config": "workspace:*",
    "@didit-sdk/tsconfig": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "tsup": "^8.1.0",
    "viem": "^2.15.1",
    "wagmi": "^2.10.8"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "viem": ">=2",
    "wagmi": ">=2"
  },
  "keywords": [
    "sdk",
    "wagmi",
    "didit",
    "web3",
    "crypto",
    "siwe",
    "walletconnect",
    "gamium",
    "ethereum"
  ],
  "author": "Didit <didit.me>",
  "license": "MIT",
  "homepage": "https://docs.didit.me/docs/unified-access-sdk",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/didit-protocol/didit-sdk-v3.git"
  },
  "bugs": {
    "url": "git+https://github.com/didit-protocol/didit-sdk-v3/issues"
  }
